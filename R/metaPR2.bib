file = {::},
issn = {1664-302X},
journal = {Frontiers in Microbiology},
keywords = {18S (SSU) rRNA gene,Phaeocystis,Southern Ocean,amplicon sequence variants,haptophytes,latitudinal diversity gradient,oceanographic fronts,winter distribution},
month = {aug},
pages = {1847},
